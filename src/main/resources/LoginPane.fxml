<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="851.0" prefWidth="1131.0" spacing="25.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-scale-x: 1.5; -fx-scale-y: 1.5;">
         <image>
            <Image url="@SLLogo.png" />
         </image>
      </ImageView>
      <TextField fx:id="liStudentNumberTxf" styleClass="login-fields" stylesheets="@StudentLiveStyle.css" />
      <TextField fx:id="liPasswordTxf" styleClass="login-fields" stylesheets="@StudentLiveStyle.css" />
      <Button fx:id="liLoginBtn" mnemonicParsing="false" styleClass="login-button" stylesheets="@StudentLiveStyle.css" text="Login" />
      <Hyperlink fx:id="liForgotPasswordHL" style="-fx-text-fill: #8B0000;" text="Forgot Password?" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
